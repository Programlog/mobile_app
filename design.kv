<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"

            TextInput:
                id: password
                hint_text: "Password"

            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""

        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
                on_press: root.forgot_pass()
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for great quotes!"

        TextInput:
            id: username
            hint_text: "Username"

        TextInput:
            id: password
            hint_text: "Password"

        Button:
            text: "Sign Up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label: 
            text: "Sign Up Successful!"
        Button:
            text: "Login Page"
            on_press: root.back_to_login()

<ForgotPassScreen>:
    GridLayout:
        cols: 1
        TextInput:
            id: username1
            hint_text: "Type in your username"
        TextInput:
            id: new_password
            hint_text: "Type your new password"
        Button:
            text: "Submit"
            on_press: root.forgot_pass_success(root.ids.username1.text, root.ids.new_password.text)


<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved..."
        Button:
            text: "ENLIGHTEN ME"
            on_press: root.get_quote(root.ids.feeling.text)
        Label:
            id: quote
            text: ""

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    ForgotPassScreen:
        name: "forgot_pass_screen"